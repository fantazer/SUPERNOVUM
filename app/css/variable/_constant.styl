// ============================ Curent color ============================
navy = #001F3F
blue = #3a90c8
aqua = #7FDBFF
teal = #39CCCC
olive = #3D9970
green = #2ECC40
lime = #01FF70
yellow = #FFDC00
orange = #FF851B
red = #FF4136
fuchsia = #F012BE
purple = #B10DC9
maroon = #85144B
white = #FFFFFF
silver = #DDDDDD
gray = #AAAAAA
black = #111111

$blue = #0095c6
$red = #f20022
$gray = #cac7c7

$main-text-color = #585858
$link-color = #5a5a5a

$link-color-visited = gray
$link-color-hover = black
$border-color = #dfdfdf

//  ============================ Typography ============================

webfont('RUB', 'rouble-webfont', 'normal')
//Add fotn rub write .rub a - (a,b,c,d - change type font)

//webfont('PT Sans', 'PT Sans', 'normal')
$v-font =  'Open Sans', sans-serif

$weigh-light = 300
$weigh-normal = 400
$weigh-bold = 700

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--xs
	typeSize(8,8)

.type--sm
	typeSize(10,10)

.type--main
	typeSize(14,12)

.type--md
	typeSize(18,15)

.type--lg
	typeSize(24,16)
	font-weight 500
	font-family "Gotham"

.type--xl
	typeSize(30,20)
	font-weight 500
	font-family "Gotham"

.type--bold
	font-weight bold

h1
	@extend .type--xl
	color black
h2
	@extend .type--lg
	color black
h3
	@extend .type--main
	color black
h4
	@extend .type--sm
	color black
h5
	@extend .type--xs
	color black

a
	transition color .6s
	color $link-color
	&:hover
		color black
	&:visiter
		color black

p
	@extend .type--main
	line-height: 1.8
	padding-top: 0
	margin-top: 0

.link--mark
	br-animate('1px',$blue)
	color $blue
	text-decoration underline
	&:hover
		color #00629a
	&:visiter
		color #00629a

.link--main
	color $link-color
	&:hover
		color black
	&:visiter
		color black

.link--text
	color $blue
	text-decoration underline
	&:hover
		text-decoration none


// ============================ Buttons ============================

btnStyle(bg-btn,color-btn)
	background bg-btn
	color color-btn
	border 1px solid color-btn
	&:hover
		background darken(bg-btn,20)
		color color-btn

btnStyleLight(br-btn,color-btn)
	color color-btn
	border br-btn solid color-btn
	&:hover
		color darken(color-btn,20)
		border br-btn solid darken(color-btn,20)

.btn
	up()
	tr(all)
	display inline-block
	background none
	border 0px
	color black
	text-align: center
	&:hover
		cursor pointer

.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px
	.nav-icon
		size 10px

.btn--md
	@extend .btn
	font-size 15px
	padding 20px 50px

.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background black
	.nav-icon
		fill white
	&:hover
		background-color $red
		color white
		box-shadow 0 9px 18px rgba(242, 0, 34, 0.6)
	&:active
		background-color $red
		outline 0!important
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	box-shadow 0 1px 2px rgba(0, 0, 0, 0.21)
	border 1px solid #e9e9e9
	background-color #ffffff
	&:hover
		box-shadow 0 5px 7px rgba(0, 0, 0, 0.09)
		border 1px solid #e9e9e9
		background-color #ffffff
	.nav-icon
		fill black

.btn--grey
	@extend .btn
	border 1px solid #dddddd
	background-color #ffffff

.btn--dotted
	@extend .btn
	border 1px dashed #d7d7d7
	background-color #ffffff
	text-align center

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--icon
	flex(mid)

.nav-icon
	display inline-block
	size 20px
	margin 0 10px

.btn--hover
	transform: perspective(100px) translateZ(0)
	box-shadow: 0 0 1px transparent
	position: relative
	overflow: hidden
	transition-property: color
	transition-duration: 0.1s
	&:before
		content: ""
		position: absolute
		z-index: -1
		top: 0
		left: 0
		right: 0
		bottom: 0
		background: gray
		border-radius: 10%
		transform: scale(0)
		transition-property: transform
		transition-duration: 0.35s
		transition-timing-function: ease-out
	&:hover,&:focus,&:active
		color: white

.btn--hover:hover:before
	transform: scale(2)
.btn--hover:focus:before
	transform: scale(2)
.btn--hover:active:before
	transform: scale(2)


button
	font-family $v-font


// ============================ Inputs ============================

.input,.textarea,.select
	border 0px
	padding 15px 20px
	border 1px solid #dedede
	resize: none
	outline: 0 !important
	border-radius 0px
	font-family $v-font
	display block!important
	placeholder(#888888)
	background: white
	tr(all)
	&:focus
		outline none!important



.style-label
	display flex
	position relative
	align-items center

.style-label--disable
	@extend .disabled

.check-el
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		width 24px
		height 24px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 1px solid #cfcfcf
		cp()
		tr(all)
		&:hover
			border 1px solid #8d8d8d
	.icon-check
		display none
	.sytle-input
		&:checked ~ .sytle-input-element
			flex(mid)
			color white
			background: black
			border 1px solid black
			.icon-check
				display block
				fill white
				size 16px

.style-label--radio
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		width 22px
		height 22px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 1px solid #cfcfcf
		round()
		cp()
	.icon-check
		display none
	.sytle-input
		&:checked + .sytle-input-element
			flex(mid)
			color white
			background: white
			border 1px solid #cfcfcf
			.icon-radio
				round()
				size 14px
				background black